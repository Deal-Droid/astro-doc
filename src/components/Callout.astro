---
import { Alert, AlertDescription, AlertTitle } from "@/components/ui/alert";
import {
  Terminal,
  PartyPopper,
  Info,
  TriangleAlert,
  Skull,
} from "lucide-react";
import { Button } from "@/components/ui/button";

type Variant = "info" | "warning" | "danger" | "success";

const { variant, title } = Astro.props as { variant?: Variant; title?: string };

const variantClasses: Record<Variant, string> = {
  info: "border-Blue bg-Blue text-background",
  warning: "border-Orange bg-Orange text-background",
  danger: "border-Red bg-Red text-background",
  success: "border-Green bg-Green text-background",
};

const variantIcons: Record<Variant, any> = {
  info: Info,
  warning: TriangleAlert,
  danger: Skull,
  success: PartyPopper,
};

const defaultTitles: Record<Variant, string> = {
  info: "Info",
  warning: "Watch Out",
  danger: "Danger",
  success: "Success",
};

// Check if the provided variant is valid; otherwise, use 'info' as the default
const validVariant = variant && variantClasses[variant] ? variant : "info";

const Icon = variantIcons[validVariant];
const alertTitle = title || defaultTitles[validVariant];
const alertClasses = variantClasses[validVariant];
---

<div class="callout py-2 w-full">
  <Alert className={`flex flex-row items-start gap-2 ${alertClasses}`}>
    <Button variant="ghost" size="icon">
      <Icon className="h-[1.2rem] w-[1.2rem]" />
    </Button>
    <div>
      <AlertTitle className="m-0">{alertTitle}</AlertTitle>
      <AlertDescription>
        <slot />
      </AlertDescription>
    </div>
  </Alert>
</div>
